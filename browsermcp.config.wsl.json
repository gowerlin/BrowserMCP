{
  "$schema": "./browsermcp.schema.json",
  "//": "BrowserMCP WSL 專用配置 - 預設使用 Puppeteer 模式",
  
  "fallback": {
    "mode": "puppeteer",
    "extensionTimeout": 5000,
    "retryAttempts": 2,
    "enableLogging": true
  },
  
  "websocket": {
    "url": "ws://localhost:9003",
    "port": 9003,
    "reconnectAttempts": 3,
    "reconnectDelay": 2000
  },
  
  "puppeteer": {
    "headless": false,
    "viewport": {
      "width": 1280,
      "height": 720
    },
    "args": [
      "--no-sandbox",
      "--disable-setuid-sandbox",
      "--disable-dev-shm-usage",
      "--disable-background-networking",
      "--disable-default-apps",
      "--disable-extensions",
      "--disable-sync",
      "--disable-translate",
      "--hide-scrollbars",
      "--metrics-recording-only",
      "--mute-audio",
      "--no-first-run",
      "--safebrowsing-disable-auto-update"
    ],
    "timeout": 30000
  },
  
  "devtools": {
    "enableNetworkMonitoring": true,
    "enablePerformanceMonitoring": true,
    "maxConsoleLogEntries": 1000,
    "maxNetworkRequestEntries": 1000
  }
}